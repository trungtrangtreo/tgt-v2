<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_white_1000"
        android:theme="@style/AppTheme.AppBarOverlay">

        <!-- Toolbar -->
        <android.support.v7.widget.Toolbar
            android:id="@+id/activityDetailFragmentToolbar"
            android:background="@color/md_black_1000"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:paddingTop="17dp"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <RelativeLayout
                android:id="@+id/main_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_arrow_back"
                    android:clickable="true"
                    android:textAllCaps="false"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/main_toolbar_title"
                    android:text=""
                    android:textColor="@color/white"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/shareBtn"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_arrow_measure_up"
                    android:clickable="true"
                    android:layout_marginRight="80dp"
                    android:textAllCaps="false"/>


                <ImageView
                    android:id="@+id/deleteBtn"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_delete_yellow"
                    android:layout_marginRight="25dp"
                    android:clickable="true"
                    android:textAllCaps="false"/>



            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <!-- Layout 2-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapview1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            map:cameraTargetLat="56.1304"
            map:cameraTargetLng="-106.3468"
            map:zoom = "7" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/location_toggle_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="16dp"
            app:srcCompat="@drawable/ic_my_loc"
            android:clickable="true"
            tools:ignore="VectorDrawableCompat"
            app:backgroundTint="#FFFFFFFF"/>

    </RelativeLayout>

    <!-- Layout 3  the height of bottom layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="11dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">


        <!-- Layout 5-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.50"
            android:weightSum="1"
            android:orientation="horizontal">


            <!-- Layout 6 Distance-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.60"
                    android:text="0 km"
                    android:textSize="19dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/md_black_1000"
                    android:id="@+id/txtDistance2" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.40"
                    android:layout_marginTop="-5dp"
                    android:text="@string/distance"
                    android:textSize="11dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/textGrey"
                    android:textAlignment="center"/>

            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="20dp"
                android:background="@color/textGrey" />

            <!-- Layout 7  Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.50"
                android:orientation="vertical">


                <Chronometer
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.60"
                    android:id="@+id/chronometer2"
                    android:visibility="visible"
                    android:textSize="19dp"
                    android:gravity="center"
                    android:textColor="@color/md_black_1000"
                    android:text="00:00:00" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.40"
                    android:layout_marginTop="-5dp"
                    android:text="@string/time"
                    android:textSize="11dp"
                    android:textColor="@color/textGrey"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"/>

            </LinearLayout>

            <!--Divider-->
            <View
                android:layout_width="0.5dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="20dp"
                android:background="@color/textGrey" />

            <!-- Layout 8 Elevation-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.60"
                    android:text="0 m"
                    android:textSize="19dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/md_black_1000"
                    android:textAlignment="center"
                    android:id="@+id/txtElevation2" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.40"
                    android:layout_marginTop="-5dp"
                    android:text="@string/elevation"
                    android:textSize="11dp"
                    android:textColor="@color/textGrey"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>