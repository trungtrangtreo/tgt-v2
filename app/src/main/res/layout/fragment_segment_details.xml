<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@color/blueGreen"
            android:orientation="vertical"
            android:padding="0dp">


            <ImageView
                android:id="@+id/firstImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:layout_margin="0dp"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/segmentNameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:gravity="center"
                android:text="@+id/photo_not_available"
                android:textColor="#FFFFFFFF"
                android:textSize="25sp" />

        </RelativeLayout>


        <Button
            android:id="@+id/directionBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorAccent"
            android:text="@string/directions_to_trail"
            android:textColor="@color/md_white_1000" />

        <TextView
            android:id="@+id/descriptionTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="17sp"
            android:visibility="gone" />

        <HorizontalScrollView
            android:id="@+id/carouselHSV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/imageGallery"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:orientation="horizontal" />
        </HorizontalScrollView>


        <!-- Trail Type-->
        <Button
            android:id="@+id/uploadBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@color/blueGreen"
            android:text="@string/upload_trail"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="3dp"
            android:text="@string/trail_type"
            android:textColor="@color/gray1"
            android:textSize="17sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/md_white_1000" />

        <TextView
            android:id="@+id/trailTypeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/md_white_1000"
            android:textSize="16sp" />


        <!-- Activities -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="3dp"
            android:text="@string/activities"
            android:textColor="@color/gray1"
            android:textSize="17sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/md_white_1000" />

        <TextView
            android:id="@+id/activitiesTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/md_white_1000"
            android:textSize="16sp" />

        <!-- Environment -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="3dp"
            android:text="@string/environment"
            android:textColor="@color/gray1"
            android:textSize="17sp"
            tools:mockup_opacity="" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/md_white_1000" />

        <TextView
            android:id="@+id/environmentTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/md_white_1000"
            android:textSize="16sp" />

        <!-- Other Resources -->
        <TextView
            android:id="@+id/resourcesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="3dp"
            android:text="@string/other_res"
            android:textColor="@color/gray1"
            android:textSize="17sp" />


        <View
            android:id="@+id/resourcesSeparator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/md_white_1000" />

        <TextView
            android:id="@+id/resourcesTxt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/black"
            android:textColorLink="@color/md_yellow_700"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/resourcesTxt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColorLink="@color/md_yellow_700"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/resourcesTxt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColorLink="@color/md_yellow_700"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/resourcesTxt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColorLink="@color/md_yellow_700"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>


</ScrollView>