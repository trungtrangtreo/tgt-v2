<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/google_img"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_weight="1.07">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/firstImage"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <!-- Trail Type-->
        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/placeName"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/textGrey"
            android:textSize="17sp"
            android:text= "@string/address"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/textGrey" />

        <TextView
            android:id="@+id/placeAddressTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/black"/>


        <!-- Activities -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textGrey"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="3dp"
            android:textSize="17sp"
            android:text="@string/phone_number"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/textGrey" />

        <TextView
            android:id="@+id/phoneTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/blueGreen"/>


        <!-- Other Resources -->
        <TextView
            android:id="@+id/resourcesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textGrey"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="3dp"
            android:textSize="17sp"
            android:text="@string/website"/>


        <View
            android:id="@+id/resourcesSeparator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/textGrey" />

        <TextView
            android:id="@+id/weburlTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:autoLink="web"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/blueGreen"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/powered_by_google_light"
            android:layout_marginTop="10dp"
            android:id="@+id/imageView4"
            android:layout_weight="1.07" />

    </LinearLayout>



</ScrollView>