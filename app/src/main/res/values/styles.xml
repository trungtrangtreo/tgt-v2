<resources xmlns:android="http://schemas.android.com/apk/res/android">>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:displayOptions">useLogo</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">#7BC047</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="HomeActivity.BottomBar.TitleTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/home_activity_bottom_bar_text_size</item>
        <item name="android:textColor">@color/home_tabs_inactive_color</item>
    </style>

    <!--Text Style-->
    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gotham_light</item>
    </style>

    <style name="TextStyleTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gotham_black</item>
    </style>

    <style name="TextTitleHowToUse" parent="TextStyleTitle">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextDescription" parent="TextStyle">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/gotham_medium</item>
    </style>


    <style name="Button" parent="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonGetStarted" parent="Button">
        <item name="android:background">@drawable/bg_button_get_started</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProgressBar">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/yellow</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/yellow</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

<!--    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">-->
<!--        <item name="colorAccent">@color/black</item>-->
<!--        <item name="android:textColorPrimary">@color/white</item>-->
<!--        <item name="android:background">@color/yellow</item>-->
<!--    </style>-->

    <style name="MyTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/yellow</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/yellow</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>

</resources>
